<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/const_nested"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="30dp">

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="118dp"
        android:layout_height="108dp"
        android:background="@color/cardview_shadow_start_color"
        android:transitionName="example_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_nesItemTitle"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:lines="2"
        android:maxLines="2"
        android:minHeight="24dp"
        android:singleLine="false"
        android:text="Product Title"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/img_thumb"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/img_thumb"
        app:layout_constraintTop_toBottomOf="@+id/img_thumb" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="price"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nesItemTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>